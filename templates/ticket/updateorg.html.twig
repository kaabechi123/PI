{% extends 'orgbase.html.twig' %}

{% block title %}Update Ticket{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Update Ticket</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.event, 'Event', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.event, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.event) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.owner, 'Owner', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.owner, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.owner) }}
                        </div>
                        <button type="submit" class="btn btn-success w-100">Update Ticket</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
