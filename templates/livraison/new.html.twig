<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('fonts/icomoon/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <title>Créer une Livraison</title>
</head>
<body>
    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style="background-image: url('{{ asset('images/bg_1.jpg') }}');"></div>
        <div class="contents order-2 order-md-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <h3>Créer une <strong>Livraison</strong></h3>
                        <p class="mb-4">Ajoutez une nouvelle livraison en remplissant les informations ci-dessous.</p>

                        {% if livraison is defined %}
                            <div class="alert alert-info">
                                {{ livraison }}
                            </div>
                        {% endif %}

                        {{ form_start(form, { 'attr': { 'class': 'form-container' } }) }}

                        <div class="form-group first">
                            <label for="date">Date de Livraison</label>
                            {{ form_widget(form.date, { 'attr': { 'class': 'form-control', 'placeholder': 'Sélectionnez une date' } }) }}
                        </div>

                        <div class="form-group last mb-3">
                            <label for="societeRecyclage">Société de Recyclage</label>
                            {{ form_widget(form.societeRecyclage, { 'attr': { 'class': 'form-control', 'placeholder': 'Entrez le nom de la société' } }) }}
                        </div>

                        <div class="d-flex mb-5 align-items-center">
                            <input type="submit" value="Enregistrer" class="btn btn-block btn-primary">
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
</body>
</html>