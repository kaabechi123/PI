{% extends 'base.html.twig' %}

{% block title %}Créer un Produit{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Créer un nouveau produit</h1>

            <div class="card shadow-lg p-4 rounded">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                {% for field in form %}
                    {% if field.vars.name != '_token' %}
                        <div class="form-group mb-3">
                            {{ form_label(field, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(field, {
                                'attr': {
                                    'class': 'form-control' ~ (field.vars.errors|length > 0 ? ' is-invalid' : ''),
                                    'required': 'required'
                                }
                            }) }}

                            {# Affichage du message d'erreur si un champ est invalide #}
                            {% if field.vars.errors|length > 0 %}
                                <div class="invalid-feedback" style="display: block;">
                                    {{ field.vars.errors[0].message }}
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                {% endfor %}

                <button type="submit" class="btn btn-primary btn-block shadow-sm">Enregistrer</button>
                {{ form_end(form) }}
            </div>

            <div class="text-center mt-3">
                <a href="{{ path('app_produit_index') }}" class="btn btn-outline-secondary">← Retourner à la liste</a>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
    const form = document.querySelector("form");

    form.addEventListener("submit", function (event) {
        let isValid = true;

        form.querySelectorAll("input[required], textarea[required], select[required]").forEach((field) => {
            if (!field.value.trim()) {
                field.classList.add("is-invalid");
                isValid = false;
            } else {
                field.classList.remove("is-invalid");
            }
        });

        if (!isValid) {
            event.preventDefault(); // Empêche la soumission du formulaire si un champ est vide
        }
    });
});
</script>

{% endblock %}
