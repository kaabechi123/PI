{% extends 'base.html.twig' %}

{% block title %}Modifier produit{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="mb-4 text-center text-primary">Modifier produit</h1>

                {# Formulaire de modification du produit avec fond de couleur raffinée #}
                <div class="card shadow-sm mb-4" style="background-color: #f7f9fc;">
                    <div class="card-body">
                        {{ include('produit/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_produit_index') }}" class="btn btn-secondary btn-sm">
                        Retourner
                    </a>

                    {# Formulaire de suppression du produit avec un bouton rouge #}
                    <div>
                        {{ include('produit/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
