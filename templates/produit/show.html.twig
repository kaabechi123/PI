{# template produit/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails du Produit{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="text-center mb-4">Détails du Produit</h1>

                <div class="card shadow-lg p-4 rounded">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="bg-light">Id</th>
                                <td>{{ produit.id }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Nom</th>
                                <td>{{ produit.nom }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Quantité</th>
                                <td>{{ produit.quantite }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Unité</th>
                                <td>{{ produit.unite }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Type de Matière</th>
                                <td>{{ produit.typeMatiere.value | capitalize }}</td> <!-- Affiche le type avec une première lettre en majuscule -->
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_produit_index') }}" class="btn btn-outline-secondary">Retourner</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-warning">Modifier</a>
                </div>

                <div class="text-center mt-4">
                    {{ include('produit/_delete_form.html.twig') }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
