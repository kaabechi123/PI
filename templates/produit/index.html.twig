{% extends 'base.html.twig' %}

{% block title %}Produit Index{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="text-center mb-4">Liste des Produits</h1>

            <div class="card shadow-lg p-4 rounded">
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Quantité</th>
                            <th>Unité</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for produit in produits %}
                        <tr>
                            <td>{{ produit.id }}</td>
                            <td>{{ produit.nom }}</td>
                            <td>{{ produit.quantite }}</td>
                            <td>{{ produit.unite }}</td>
                            <td>
                                <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-info btn-sm">Afficher</a>
                                <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="text-center mt-3">
                <a href="{{ path('app_produit_new') }}" class="btn btn-primary">Créer un nouveau produit</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
