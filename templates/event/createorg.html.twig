{% extends 'orgbase.html.twig' %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4 fw-bold">Create a New Event</h2>
                    
{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'your-form-class'}}) }}
    <div class="form-group">
        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.startDate, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.endDate, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.location, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.organizer, {'attr': {'class': 'form-control'}}) }}
    </div>
    <button type="submit" class="btn btn-primary w-100 py-2" style="background-color: #28a745;">Create Event</button>
{{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
